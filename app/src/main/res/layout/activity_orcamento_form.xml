<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrcamentoFormActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
                android:id="@+id/form_codigo_do_produto"
                android:hint="CÃ³digo do Produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/form_cpf_do_cliente"
                android:hint="CPF do Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/form_quantidade"
                android:hint="Quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/botao_salvar_orcamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"/>

    </LinearLayout>
</ScrollView>