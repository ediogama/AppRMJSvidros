<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/layoutMenuLateral"
        android:fitsSystemWindows="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaInicialActivity"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />
            <Button
                    android:id="@+id/botao_clientes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Clientes"
                    android:textSize="20dp"/>
            <Button
                    android:id="@+id/botao_produtos"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Produtos"
                    android:textSize="20dp"/>
            <Button
                    android:id="@+id/botao_orcamento"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="OrÃ§amentos"
                    android:textSize="20dp"/>
            <Button
                    android:id="@+id/botao_fornecedor"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Fornecedores"
                    android:textSize="20dp"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>